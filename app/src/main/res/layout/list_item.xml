<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/places_image"
        android:layout_alignParentTop="true"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:src="@drawable/places"/>

    <TextView
        android:id="@+id/place_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/places_name"
        android:padding="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_toRightOf="@+id/places_image"/>

    <TextView
        android:id="@+id/places_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/places_description"
        android:padding="8dp"
        android:layout_toRightOf="@+id/places_image"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_below="@+id/place_title"/>



</RelativeLayout>